@model Fishbait2.Models.PostViewModel
<style>
    body {
        position: relative;
        padding-bottom: 150px;
        min-height: 100vh;
    }

    footer {
        text-align: center;
        position: absolute;
        bottom: 0;
        width: 100%;
    }

    textarea {
        resize: none;
    }
</style>



<div class="container">
    <form asp-action="Create">
        <div class="form-row col-md-4">
            <label for="inputTitle">Title</label>
            <input asp-for="title" type="text" class="form-control" id="" placeholder="Title">
            <span asp-validation-for="title" class="text-danger"></span>
        </div>
        <div class="form-row col-md-8">
            <label for="inputDescription">Description</label>
            <textarea asp-for="description" type="text" class="form-control inputBox" rows="3" id="exampleFormControlTextarea1" placeholder="Description"></textarea>
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <div class="form-row col-md-4">
            <label for="inputImage">Image</label>
            <input asp-for="files" type="file" name="files" multiple />
            <span asp-validation-for="files" class="text-danger"></span>
        </div>
        <div class="form-row col-md-4">
            <label for="inputTag">Tag</label>
            <select asp-for="tag" id="inputTag" class="form-control">
                <option selected>Choose...</option>
                <option>Tech</option>
                <option>Nature</option>
                <option>Creative</option>
            </select>
            <span asp-validation-for="tag" class="text-danger"></span>
        </div>
        <br />
        <div class="form-row col-md-4">
            <button type="submit" class="btn btn-primary">Create Post</button>
        </div>
    </form>
</div>
