@model Fishbait2.Models.Post
@{
    ViewData["Title"] = "@Model.Titel";
}
<style>

      body {
        position: relative;
        padding-bottom: 150px;
        min-height: 100vh;
    }

    footer {
        text-align: center;
        position: absolute;
        bottom: 0;
        width: 100%;
    }


</style>

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h2>@Model.title</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <img src="~/PostImages/@Model.image" alt="image" class="postBoxImageView">
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-7">
            @Model.description
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <b>Tags:</b> <h6>@Model.tag</h6>
        </div>
    </div>
</div>



