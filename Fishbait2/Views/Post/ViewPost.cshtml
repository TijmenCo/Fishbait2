@model Fishbait2.Models.Post
@{
    ViewData["Title"] = "@Model.Titel";
}
<style>

    body {
        position: relative;
        padding-bottom: 150px;
        min-height: 100vh;
    }

    footer {
        text-align: center;
        position: absolute;
        bottom: 0;
        width: 100%;
    }

    .postBoxImage {
        max-height: 250px;
        max-width: 500px;
        min-height: 150px;
        min-width: 150px;
    }

    .postBoxImageContainer {
        text-align: left;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>@Model.title</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 postBoxImageContainer">
            <img src="~/PostImages/@Model.image" alt="image" class="postBoxImage">
        </div>
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Follow!</h5>
                    <p class="card-text">If you like their idea be sure to follow to get a notification when they update.</p>
                    <a href="#" class="btn btn-primary">I'm interested!</a>
                </div>
            </div>
            <br />
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <a href='@string.Format("/post/DeletePost?id={0}", Model.id)' class="btn btn-danger">Delete Post</a>
                    <br />
                    <br />
                    <a href='@string.Format("/post/EditPost?id={0}", Model.id)' class="btn btn-success">Edit Post</a>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-7">
            @Model.description
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <b>Tags:</b> <h6>@Model.tag</h6>
        </div>
    </div>
</div>



