<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link href="~/css/custom.css" rel="stylesheet" />


    <title>Fishbait!</title>
</head>
<body>
    <div class="container-fluid">
        <main>
            <nav class="navbar navbar-expand-md navbar-light bg-white" style="padding: 0px;">
                <a href="/home/index"class="navbar-brand">
                    <img src="~/Images/FishbaitLogo.png" alt="FISHBAIT" style="width:90px;">
                </a>
                <div class="navbar-nav">
                    <form class="form-inline" asp-action="Search" asp-controller="Post">
                        <input type="text" class="form-control mr-sm-2" placeholder="Search" name="result">
                        </form>
                        <a class="nav-item nav-link active text-nowrap" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item nav-link active text-nowrap" asp-area="" asp-controller="Post" asp-action="CreatePost">Create Post</a>
                </div>
                <div class="navbar-nav ml-auto">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                            <img src="~/Images/notibell.png" style="width:20px;">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                           @* <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Menu item 4</a></li>*@
                        </ul>
                    </div>
                    <a class="nav-item nav-link text-nowrap" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                </div>

            </nav>
        </main>
    </div>
    <hr />

    @RenderBody()

<footer id="sticky-footer" class="py-3 bg-dark text-white">
    <div class="container text-center">
        <small><b>© Copyright FISHBAIT 2020</b></small>
    </div>
    </footer>
</body>
</html>